<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friend_list_label"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Friend List"
        android:textSize="40sp" />

    <Button
        android:id="@+id/friend1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="test@ucsd.edu" />

    <Button
        android:id="@+id/friend2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="yux166@ucsd.edu" />

    <Button
        android:id="@+id/friend3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="test@ucsd.edu" />

    <Button
        android:id="@+id/friend4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="yux166@ucsd.edu" />

    <Button
        android:id="@+id/friend5"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="test@ucsd.edu" />

    <Button
        android:id="@+id/friend6"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="yux166@ucsd.edu" />

    <TextView
        android:id="@+id/split_label"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="------------------------------------"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:textSize="40sp" />

    <Button
        android:id="@+id/add_friend_button"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/message_back_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Add friend" />

    <Button
        android:id="@+id/friend_list_back_button"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back" />

</RelativeLayout>